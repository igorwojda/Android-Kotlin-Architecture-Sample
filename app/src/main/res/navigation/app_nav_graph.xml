<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_graph"
        app:startDestination="@id/albumListFragment">
    <!-- For navigation to work id must match id present in the nav_menu-->

    <!--    feature_album_nav_graph    -->
    <fragment
            android:id="@+id/albumListFragment"
            android:name="com.igorwojda.showcase.feature.album.presentation.albumlist.AlbumListFragment"
            android:label="AlbumListFragment"
            app:moduleName="feature_album">
        <action
                android:id="@+id/actionAlbumListToAlbumDetail"
                app:destination="@id/albumDetailFragment" />
    </fragment>

    <fragment
            android:id="@+id/albumDetailFragment"
            android:name="com.igorwojda.showcase.feature.album.presentation.albumdetail.AlbumDetailFragment"
            android:label="AlbumDetailFragment"
            app:moduleName="feature_album">
        <argument
                android:name="artistName"
                app:argType="string" />
        <argument
                android:name="albumName"
                app:argType="string" />
        <argument
                android:name="mbId"
                app:argType="string"
                app:nullable="true" />
    </fragment>

    <!--    feature_favourite_nav_graph    -->
    <fragment
            android:id="@+id/favouriteFragment"
            android:name="com.igorwojda.showcase.feature.favourite.presentation.favourite.FavouriteFragment"
            android:label="FavouriteFragment"
            app:moduleName="feature_favourite" />

    <!--    feature_profile_nav_graph    -->
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.igorwojda.showcase.feature.profile.presentation.profile.ProfileFragment"
            android:label="ProfileFragment"
            app:moduleName="feature_profile" />

</navigation>
